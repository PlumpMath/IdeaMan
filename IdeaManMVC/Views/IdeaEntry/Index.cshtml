@model List<IdeaManMVC.Models.Ideas.IdeaShortViewModel>
<style>
    .list-group li {
         list-style: none;
     }
    .footer-padding {
        padding-bottom: 25px;
        margin-bottom: -25px;
    }
</style>
@{
    ViewBag.Title = "Ideas for Life";
}
<div class="text-center">
    <h2 class="">@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
</div>
<hr/>
<div class="container">
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.ActionLink("Read more", "Details", new { id = item.Id, }, new { @class = "btn pull-right" })
                        <h4 class="panel-title">@Html.DisplayFor(m => item.Title)</h4>
                        <div class="panel-info">
                            <hr/>
                            <p>@Html.DisplayFor(m => item.ShortDescription)</p>
                            <div class="panel-footer footer-padding">
                                <p style="float:left">
                                    @Html.DisplayFor(m => item.CreatorName)
                                </p>
                                <p style="float:right">
                                    @Html.DisplayFor(m => item.CreationDate)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

